    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch JS",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },{
            "type": "node",
            "request": "launch",
            "name": "Launch TS",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${file}"
            ]
        },
    ]
}
